<header>ExpressPost Worldwide Tracking</header>

<div class="container">
    <form class="tracking-form" onsubmit="trackPackage(event)">
        <input type="text" id="trackingInput" placeholder="Enter Tracking ID (e.g., EXP-1995-TX-HN79)">
        <button type="submit">Track</button>
    </form>

    <div id="trackingResult">
        <p>Enter your tracking ID above to see details.</p>
    </div>
</div>

<script>
function trackPackage(event) {
    event.preventDefault();
    const trackingId = document.getElementById('trackingInput').value.trim();
    const resultDiv = document.getElementById('trackingResult');

    if (trackingId.toUpperCase() === "EXP-1995-TX-HN79") {
        resultDiv.innerHTML = `
            <div class="tracking-details">
                <h3>Tracking Details</h3>
                <div class="detail-row"><strong>Recipient:</strong> <span>Stanley Peter</span></div>
                <div class="detail-row"><strong>Address:</strong> <span>Texas, USA</span></div>
                <div class="detail-row"><strong>Sender:</strong> <span>Tony Ever</span></div>
                <div class="detail-row"><strong>Delivery Item:</strong> <span>Mercedes Benz C300 2012 (Black)</span></div>
                <div class="detail-row"><strong>VIN:</strong> <span>4JGFB6BB5PA867769</span></div>
                <div class="detail-row"><strong>Location:</strong> <span>USA - Customs Clearance</span></div>
                <div class="detail-row"><strong>Custom Fee:</strong> <span class="highlight">Pending Payment</span></div>
                <div class="detail-row"><strong>Expected Delivery:</strong> <span class="highlight">15th (Today)</span></div>
            </div>
        `;
    } else {
        resultDiv.innerHTML = `<p style="color:red;">Tracking ID not found. Please check and try again.</p>`;
    }
}
</script>

